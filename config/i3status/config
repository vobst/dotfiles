# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "run_watch PW"
order += "run_watch DOCKERd"
order += "run_watch SSHd"
order += "run_watch NM"
order += "ipv6"
order += "ethernet _first_"
order += "wireless _first_"
order += "disk /"
order += "disk /usr/data"
order += "disk /usr/data2"
order += "disk /usr/data3"
order += "battery 0"
order += "load"
order += "cpu_temperature 0"
order += "memory"
order += "tztime local"

run_watch "PW" {
	pidfile = "/tmp/pipewire.pid"
	format = "%title"
	separator_block_width = 10 
}

run_watch "DOCKERd" {
	pidfile = "/var/run/docker.pid"
	format = "%title"
	separator_block_width = 10 
}

run_watch "SSHd" {
	pidfile = "/var/run/sshd.pid"
	format = "%title"
	separator_block_width = 10 
}

run_watch "NM" {
	pidfile = "/tmp/NetworkManager.pid"
	format = "%title"
	separator_block_width = 10 
}

run_watch "DHCPd" {
	pidfile = "/var/run/dhcpcd/enp0*.pid"
	format = "%title"
	separator_block_width = 10 
}

wireless _first_ {
	format_up = "W: %ip [%quality at %essid]"
	format_down = "W: down"
	format_quality = "%03d%s"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
	separator_block_width = 10 
}

disk "/" {
        format = "/ %percentage_avail(%avail)"
	threshold_type = percentage_avail
	low_threshold = 40
	format_below_threshold = "Warning: / %percentage_avail"
}

disk "/usr/data" {
        format = "data1 %percentage_avail (%avail)"
	low_threshold = 25
	threshold_type = percentage_avail
	format_below_threshold = "Warning: data1: %percentage_avail"
	separator = false
}

disk "/usr/data2" {
        format = "data2 %percentage_avail (%avail)"
	low_threshold = 25
	threshold_type = percentage_avail
	format_below_threshold = "Warning: data2: %percentage_avail"
	separator = false
}

disk "/usr/data3" {
        format = "data3 %percentage_avail (%avail)"
	low_threshold = 25
	threshold_type = percentage_avail
	format_below_threshold = "Warning: data3: %percentage_avail"
	separator_block_width = 10 
}

battery 0 {
  format = "BAT %percentage"
  integer_battery_capacity = true
  format_down = "No BAT"
  status_chr = "âš¡"
  status_bat = "ðŸ”‹"
  status_unk = "?"
  status_full = "â˜»"
  path = "/sys/class/power_supply/BAT%d/uevent"
  threshold_type = "percentage"
  low_threshold = 10
}

load {
        format = "CPU %1min,%5min,%15min"
	separator = false
}

cpu_temperature 0 {
	format = "%degrees"
	max_threshold = 60
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input"
	separator_block_width = 10 
}


memory {
        format = "RAM %percentage_used(%used)"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
	separator_block_width = 10 
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
	separator_block_width = 10 
}

read_file "UPTIME" {
	path = "/proc/uptime"
	format = "%title: %content"
	separator_block_width = 10 
}
